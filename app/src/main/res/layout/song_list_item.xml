<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for a song object list item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/songs_parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/song_image_view"
        android:layout_width="@dimen/song_list_image_width"
        android:layout_height="@dimen/song_list_image_height"
        tools:src="@drawable/sample_album" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#D5D5DF"
            android:textStyle="bold"
            tools:text="Persnickety" />

        <TextView
            android:id="@+id/artist_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="2dp"
            tools:text="Outta M'mind" />

    </LinearLayout>

    <ImageView
        android:id="@+id/play_icon_image_view"
        android:layout_width="@dimen/song_list_icon_width"
        android:layout_height="@dimen/song_list_icon_height"
        android:src="@drawable/play_icon" />

</LinearLayout>